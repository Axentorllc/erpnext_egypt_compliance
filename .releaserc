{
	"branches": ["main"],
	"plugins": [
		[
			"@semantic-release/commit-analyzer",
			{
				"preset": "angular",
				"releaseRules": [
					{ "breaking": true, "release": "minor" },
					{ "revert": true, "release": "patch" },
					{ "type": "feat", "release": "minor" },
					{ "type": "fix", "release": "patch" },
					{ "type": "perf", "release": "patch" },
					{ "type": "refactor", "release": "patch" },
					{ "type": "docs", "release": "patch" },
					{ "type": "chore", "release": "patch" }
				]
			}
		],
		[
			"@semantic-release/release-notes-generator",
			{
				"preset": "angular",
				"presetConfig": {
					"types": [
						{ "type": "feat", "section": "&#x2728; Features", "hidden": false },
						{ "type": "fix", "section": "ğŸ› Bug Fixes", "hidden": false },
						{ "type": "perf", "section": "âš¡ Performance", "hidden": false },
						{ "type": "refactor", "section": "ğŸ”¨ Code Refactoring", "hidden": false },
						{ "type": "docs", "section": "ğŸ“– Documentation", "hidden": false },
						{ "type": "chore", "section": "ğŸ” Maintenance", "hidden": false },
						{ "type": "revert", "section": "âª Reverts", "hidden": false },
						{ "type": "test", "section": "ğŸ§ª Tests", "hidden": false },
						{ "type": "build", "section": "ğŸ— Build System", "hidden": false },
						{ "type": "ci", "section": "ğŸ”§ CI", "hidden": false }
					]
				}
			}
		],
		[
			"@semantic-release/exec",
			{
				"prepareCmd": 'sed -ir "s/[0-9]*\.[0-9]*\.[0-9]*/${nextRelease.version}/" erpnext_egypt_compliance/__init__.py'
			}
		],
		[
			"@semantic-release/git",
			{
				"assets": ["erpnext_egypt_compliance/__init__.py"],
				"message": "chore(release): Bump to Version ${nextRelease.version}\n\n${nextRelease.notes}"
			}
		],
		["@semantic-release/github", {"draftRelease": true}]
	]
}
